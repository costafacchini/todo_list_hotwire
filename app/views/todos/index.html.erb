<% content_for :title, "Todos" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Todos</h1>
    <%= link_to "New todo", new_todo_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="todos" class="space-y-3">
    <% if @todos.any? %>
      <% @todos.each do |todo| %>
        <div class="grid grid-cols-[1fr_50px_50px] items-center py-2 gap-4">
          <div class="min-w-0">
            <h3 class="text-lg font-medium text-gray-900 <%= 'line-through text-gray-500' if todo.completed %> truncate">
              <%= todo.title %>
            </h3>
          </div>

          <div class="flex items-center justify-center">
            <input type="checkbox"
                   class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 focus:ring-2 disabled:opacity-50 disabled:cursor-not-allowed"
                   <%= 'checked' if todo.completed %>
                   disabled>
          </div>

          <div class="flex items-center justify-center space-x-2">
            <%= link_to edit_todo_path(todo), class: "text-gray-600 hover:text-gray-800 p-1 rounded hover:bg-gray-100 transition duration-150" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
            <% end %>

            <%= button_to todo, method: :delete, class: "text-red-600 hover:text-red-800 p-1 rounded hover:bg-red-50 transition duration-150", data: { turbo_confirm: "Are you sure?" } do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No todos found.</p>
    <% end %>
  </div>
</div>
