<div class="grid grid-cols-[1fr_50px_50px] items-center py-2 gap-4" data-controller="todo" id="<%= dom_id(todo) %>">
  <div class="min-w-0">
    <div data-todo-target="display">
      <h3 class="text-lg font-medium text-gray-900 <%= 'line-through text-gray-500' if todo.completed %> truncate">
        <%= todo.title %>
      </h3>
    </div>

    <div data-todo-target="form" class="hidden">
      <%= form_with model: todo, data: { action: "turbo:submit-end->todo#submit", todo_target: "form" } do |f| %>
        <div class="flex items-center space-x-2">
          <%= f.text_field :title,
              data: { todo_target: "title" },
              class: "flex-1 px-2 py-1 text-sm border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>

          <button type="submit" class="text-green-600 hover:text-green-800 p-1 rounded hover:bg-green-50 transition duration-150">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </button>

          <button type="button"
                  data-action="click->todo#cancel"
                  class="text-gray-600 hover:text-gray-800 p-1 rounded hover:bg-gray-100 transition duration-150">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
      <% end %>
    </div>
  </div>

  <div class="flex items-center justify-center">
    <input type="checkbox"
           class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 focus:ring-2 disabled:opacity-50 disabled:cursor-not-allowed"
           <%= 'checked' if todo.completed %>
           disabled>
  </div>

  <div class="flex items-center justify-center space-x-2">
    <button data-action="click->todo#edit"
            class="text-gray-600 hover:text-gray-800 p-1 rounded hover:bg-gray-100 transition duration-150">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
      </svg>
    </button>

    <%= button_to todo, method: :delete, class: "text-red-600 hover:text-red-800 p-1 rounded hover:bg-red-50 transition duration-150", data: { turbo_confirm: "Are you sure?" } do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
      </svg>
    <% end %>
  </div>
</div>